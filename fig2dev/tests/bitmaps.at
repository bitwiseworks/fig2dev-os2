AT_BANNER([Create and embed bitmaps in fig-file.])

AT_SETUP([gif])
AT_KEYWORDS(bitmaps gif)

AT_CHECK([fig2dev -L gif $srcdir/data/line.fig line.gif &&\
	sed '11 s/xpm/gif/' $srcdir/data/boxwimg.fig | fig2dev -L eps
],0,ignore)

